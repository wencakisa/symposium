<% provide(:title, 'Users') %>

<% if @users.empty? %>
  <h1>There are no users yet.</h1>
<% else %>
  <h1>All users: </h1>

  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <%= gravatar_for(user, size: 75) %>
        <%= link_to user.name, user %>
      </li>
    <% end %>
  </ul>
<% end %>
