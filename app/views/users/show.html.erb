<% provide(:title, "User #{@user.name}") %>

<div class="row">
  <div class="col-md-3">
    <%= gravatar_for(@user) %>
  </div>
  <div class="col-md-6 col-md-offset-3" id="profileInfo">
    <p><strong>Name: </strong><%= @user.name %></p>
    <p><strong>Email: </strong><%= @user.email %></p>
    <hr/>
    <% if current_user?(@user) %>
      <%= link_to 'Update profile info', edit_user_path(@user), class: 'btn btn-lg btn-info center-block' %>
    <% end %>
  </div>
</div>
